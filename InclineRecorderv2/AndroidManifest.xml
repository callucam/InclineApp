            android:name=".Intro"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Newship"
            android:label="@string/newship_title" >
        </activity>
        <activity
            android:name=".Loadship"
            android:label="@string/loadship_title" >
        </activity>
        <activity
            android:name=".InclineRecorderv2"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Info"
            android:label="@string/info_title" >
        </activity>
        <activity
            android:name=".Experiment"
            android:label="@string/experiment_title" >
        </activity>
        <activity
            android:name=".Drafts"
            android:label="@string/drafts_title" >
        </activity>
